<p id="notice"><%= notice %></p>
  
<div class="col-xs-9">
  <h2><%= @activity.name %> <span class="edit-link"><%= link_to '(Edit)', edit_activity_path(@activity) %> </span></h2>
  <div class="row">
    <div class="col-xs-6">
      <h4>Location</h4>
      <p>
        <%= @activity.venue %> <br>
        <%= @activity.street_address %> <br>
        <%= @activity.city %>, <%= @activity.state.abbreviation %> <%= @activity.zip %> <br>
        <%= link_to @activity.website, @activity.website, :target => "_blank" %>
      </p>
    </div> <!-- col-xs-6 -->

    <div class="col-xs-6">
      <h4>Description</h4>
      <p><%= @activity.description %></p>
    </div> <!-- col-xs-6 -->
  </div> <!-- row -->
  
  <div class="row">  
    <hr>
    <h3>Comments</h3>
    <%= render "comments/comment" %>
    <hr>

    <h3>Leave a Comment</h3>
    <%= render "comments/form" %>
    <hr>

  </div> <!-- col-xs-9 -->
</div> <!-- row -->

<div class="col-xs-3">
  <%= render "layouts/sidebar" %> 
</div> <!-- col-xs-3 -->
