<% @comments.order("created_at DESC").each do |comment| %>
<div class="comment">
  <div class="buttons">
         <%= link_to 'Delete', [@commentable, comment], method: :delete, data: { confirm: 'Are you sure you want to delete ' + comment.name + "'s comment? This action cannot be undone." } %>
  </div> <!-- buttons -->
  <p><%= comment.name %> says (<%= time_ago_in_words(comment.created_at) %> ago): </p>
    <p>"<%= comment.comment %>"</p>
    </div>  <!-- comment -->
<% end %>
