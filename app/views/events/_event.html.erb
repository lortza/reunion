<h2>
  <%= @event.name %>
</h2>
<%= link_to "Sign Up for #{@event.name}", [:new, @rsvpable, :rsvp] %>
<%= render "layouts/sidebar" %>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>
<p>
  <strong>Location:</strong> <br>
  <%= @event.venue %> <br>
  <%= @event.street_address %> <br>
  <%= @event.city %>, <%= @event.state %> <%= @event.zip %> <br>
  <%= link_to @event.website, @event.website, :target => "_blank" %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>